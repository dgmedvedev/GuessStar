<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageViewPhotoStar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/photo_star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPhotoStar">

        <Button
            android:id="@+id/buttonOptionOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_option_1" />

        <Button
            android:id="@+id/buttonOptionTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_option_2" />

        <Button
            android:id="@+id/buttonOptionThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_option_3" />

        <Button
            android:id="@+id/buttonOptionFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_option_4" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>